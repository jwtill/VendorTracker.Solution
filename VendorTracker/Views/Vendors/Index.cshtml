@{
  Layout = "_Layout";
}
@using VendorTracker.Models;
<div class="container">
  <div class="card">
    <div class="card-body">
      <h1>Vendors</h1>
      @if (@Model.Count == 0)
      {
        <h3>No vendors have been added yet!</h3>
      }
      @foreach (Vendor vendor in Model)
      {
        <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
      }
      <p><a href='/vendors/new'>New vendor</a></p>
    </div>
  </div>
</div>